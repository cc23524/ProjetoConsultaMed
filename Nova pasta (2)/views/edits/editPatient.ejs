<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Editar paciente</title>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <style>
        body {
            margin-top: 70px;
            margin-bottom: 70px;
        }
        h1 {
            text-align: center;
        }
        #password-message {
            color: red;
            font-weight: bold;
        }
    </style>
    
    <body>
        <h1>Editar Paciente</h1>
        
        <div class="container">
            <form action="/updateP/<%= patient.idP %>" method="POST">
                <div class="form-group">
                    <label for="nome">Nome:</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="<%= patient.nome %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="sobrenome">Sobrenome:</label>
                    <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%= patient.sobrenome %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= patient.email %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="cpf">CPF:</label>
                    <input type="text" class="form-control" id="cpf" name="cpf" maxlength="11" value="<%= patient.cpf %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="nickname">Nickname:</label>
                    <input type="text" class="form-control" id="nickname" name="nickname" value="<%= patient.nickname %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="senha_atual">Senha Atual:</label>
                    <input type="password" class="form-control" id="senha_atual" name="senha_atual">
                    <p id="password-message2"></p>
                </div>
                <br>
                <div class="form-group">
                    <label for="senha_nova">Senha Nova:</label>
                    <input type="password" class="form-control" id="senha_nova" name="senha_nova">
                </div>
                <br>
                <div class="form-group">
                    <label for="password-confirm">Confirme a Senha:</label>
                    <input type="password" class="form-control" id="password-confirm" name="password-confirm">
                    <p id="password-message"></p>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Atualizar</button>
                <a href="javascript:history.back();" class="btn btn-primary">Voltar</a>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>

        <script>
            const senha_nova = document.getElementById("senha_nova");
            const password_confirm = document.getElementById("password-confirm");
            const senha_atual = document.getElementById("senha_atual");
            const passwordMessage = document.getElementById("password-message");
            const passwordMessage2 = document.getElementById("password-message2");

            function checkPasswords() {
                if (!senha_nova.value && !password_confirm.value) {
                    passwordMessage.textContent = "";
                    passwordMessage.style.fontSize = "12";
                    return;
                }

                if (senha_nova.value !== password_confirm.value) {
                    passwordMessage.textContent = "As senhas não conferem!";
                    passwordMessage.style.color = 'red';
                    passwordMessage.style.fontSize = "12";
                } else {
                    passwordMessage.textContent = "";
                }
            }

            function checkPasswords2() {
                if (!senha_atual.value) {
                    passwordMessage2.textContent = "";
                    return;
                }

                if (senha_atual.value !== "<%= patient.senha %>") {
                    passwordMessage2.textContent = "A senha atual está incorreta!";
                    passwordMessage2.style.color = 'red';
                    passwordMessage2.style.fontSize = "12";
                } else {
                    passwordMessage2.textContent = "";
                }
            }

            senha_nova.addEventListener("input", checkPasswords);
            password_confirm.addEventListener("input", checkPasswords);
            senha_atual.addEventListener("input", checkPasswords2);
        </script>
    </body>
</html>